
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>LONG STORE</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="LONG STORE" name="keywords">
    <meta content="LONG STORE" name="description">
    <title>@ViewData["title"] - Admin</title>
    <!-- Favicon -->
    <link href="~/favicon.ico" rel="icon">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.1/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/sitecss/style.css" rel="stylesheet">
</head>

<body>
    <!-- Top bar Start -->
    <div class="top-bar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <i class="fa fa-envelope"></i>
                    support@email.com
                </div>
                <div class="col-sm-6">
                    <i class="fa fa-phone-alt"></i>
                    +012-345-6789
                </div>
            </div>
        </div>
    </div>
    <!-- Top bar End -->
    <!-- Nav Bar Start -->
    <div class="nav">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                <a href="#" class="navbar-brand">MENU</a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto">
                        <a asp-controller="Product" asp-action="Index" class="nav-item nav-link">Products management</a>
                        <a asp-controller="Category" asp-action="Index" class="nav-item nav-link">Categories management</a>
                        <a asp-controller="Brand" asp-action="Index" class="nav-item nav-link">Brands management</a>
                        <a asp-controller="Slider" asp-action="Index" class="nav-item nav-link">Sliders management</a>
                        <a asp-controller="Order" asp-action="Index" class="nav-item nav-link">Orders management</a>
                        <a asp-controller="User" asp-action="Index" class="nav-item nav-link">Users management</a>
                        <a asp-controller="Role" asp-action="Index" class="nav-item nav-link">Roles management</a>
                    </div>
                    <div class="navbar-nav ml-auto">
                        <div class="nav-item dropdown">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <div class="navbar-nav ml-auto">
                                    <div class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">@User.Identity.Name</a>
                                        <div class="dropdown-menu">
                                            <a asp-controller="User" asp-action="Logout" class="dropdown-item">Logout</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="navbar-nav ml-auto">
                                    <a asp-controller="Account" asp-action="Login" class="nav-item nav-link">Login & Register</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Nav Bar End -->
    <!-- Bottom Bar Start -->
    <div class="bottom-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a asp-action="Index">
                            <img src="~/imgs/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                @* <div class="col-md-6">
                    <div class="search">
                        <input type="text" placeholder="Search">
                        <button><i class="fa fa-search"></i></button>
                    </div>
                </div> *@
                <div class="col-md-3">
                    <div class="user">                      
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bottom Bar End -->
    <!-- Product List Start -->
    @Html.Partial("_NotificationPartial")
    @RenderBody()

    <!-- Product List End -->
    
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.1/dist/sweetalert2.all.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/backend/js/site.js"></script>
    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    <script>
        $(function () {
            var message = '@TempData["success"]';
            if (message != '')
                Swal.fire(message);
        })
    </script>
    @await RenderSectionAsync("Scripts", required:false)
</body>
</html>
