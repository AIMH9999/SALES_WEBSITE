<div b-jjbd2nyio7="" class="call-to-action">
    <div b-jjbd2nyio7="" class="container-fluid">
        <div b-jjbd2nyio7="" class="row align-items-center">
            <div b-jjbd2nyio7="" class="col-md-6">
                <h1 b-jjbd2nyio7="">List Orders</h1>
            </div>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover table-striped align-middle" id="myTable">
    <thead class="thead-dark text-center">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">User Name</th>
            <th scope="col">User Email</th>
            <th scope="col">Order Date</th>
            <th scope="col">Order Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row" class="text-center align-middle">@item.Id</th>
                <td class="align-middle">@item.OrderCode</td>
                <td class="align-middle">@item.UserName</td>
                <td class="align-middle">@item.UserEmail</td>
                <td class="align-middle">@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td class="text-center align-middle">
                    @if (@item.Status == 1)
                    {
                        <span class="badge badge-warning">Đơn hàng mới</span>
                    }
                    else if (@item.Status == 2)
                    {
                        <span class="badge badge-success">Đơn hàng đã xác nhận</span>
                    }
                    else
                    {
                        <span class="badge badge-success">Đơn hàng thành công</span>
                    }
                </td>
                <td class="text-center align-middle">
                    <a asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode" class="btn btn-warning btn-sm">View Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>

