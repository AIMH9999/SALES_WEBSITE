<table class="table table-bordered table-hover table-striped align-middle" id="myTable">
    <thead class="thead-dark text-center">
        <tr>
            <th scope="col">#</th>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password Hash</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row" class="text-center">@item.User.Id</th>
                <td>@item.User.UserName</td>
                <td>@item.User.Email</td>
                <td>@item.User.PasswordHash</td>
                <td>@item.RoleName</td>
                <td class="text-center">
                @if (item.User.UserName !="infinityaimh9999")
                {
                    
                        <a asp-action="Edit" asp-controller="User" asp-route-Id="@item.User.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="User" asp-route-Id="@item.User.Id" class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                   
                }
                </td>
            </tr>
        }
    </tbody>
</table>

