@model AppUserModel
@{
    ViewData["Title"] = "Create User";
}
<div class="call-to-action mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Create User</h1>
            </div>
        </div>
    </div>
</div>
<div class="col-md-8 mx-auto">
    <div class="tab-content p-5 shadow rounded bg-light">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Email Field -->
            <div class="mb-4">
                <div class="form-group">
                    <label for="Email" class="form-label" required>Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger" />
                </div>
            </div>

            <!-- User Name Field -->
            <div class="mb-4">
                <div class="form-group">
                    <label for="UserName" class="form-label" required>User Name</label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="UserName" class="text-danger" />
                </div>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <div class="form-group">
                    <label for="Password" class="form-label" required>Password</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="PasswordHash" class="text-danger" />
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="RoleId" class="form-label">Roles</label>
                        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">                         
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger" />
                    </div>
                </div>
            </div>
            <!-- Submit Button -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5">Submit</button>
            </div>
        </form>

        <!-- Back Button -->
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List Users</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
