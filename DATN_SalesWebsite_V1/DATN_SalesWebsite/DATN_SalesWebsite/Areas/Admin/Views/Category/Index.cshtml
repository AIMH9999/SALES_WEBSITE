<table class="table table-bordered table-hover table-striped align-middle" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">Category Name</th>
            <th scope="col" class="text-center">Category Description</th>
            <th scope="col" class="text-center">Category Slug</th>
            <th scope="col" class="text-center">Category Status</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row" class="text-center align-middle">@item.Id</th>
                <td class="align-middle">@item.Name</td>
                <td class="align-middle">@item.Description</td>
                <td class="align-middle">@item.Slug</td>
                <td class="text-center align-middle">
                    @if (@item.Status == 1)
                    {
                        <span class="badge badge-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Ẩn</span>
                    }
                </td>
                <td class="text-center align-middle">
                    <a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-danger btn-sm mx-1 confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


