@model SliderModel
@{
    ViewData["Title"] = "Edit Slider";
}
<div class="call-to-action mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Edit Slider</h1>
            </div>
        </div>
    </div>
</div>
<div class="col-md-8 mx-auto">
    <div class="tab-content p-5 shadow rounded bg-light">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Image" class="form-label">Image</label>
                        <input asp-for="ImageUpload" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger" />
                        <img src="~/media/sliders/@Model.Image" width="120">
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-control">
                            <option value="1">Hiển thị</option>
                            <option value="2">Ẩn</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary px-5">Update</button>
                </div>
            </div>
        </form>


        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List Sliders</a>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
