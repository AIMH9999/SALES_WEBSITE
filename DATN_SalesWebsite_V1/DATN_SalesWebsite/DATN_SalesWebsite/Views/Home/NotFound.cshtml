@{
    Layout = null;
    ViewData["Title"] = "NotFound 404";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa; /* Màu nền trang */
            text-align: center;
        }

        h1 {
            color: #007bff; /* Màu xanh da trời */
            font-size: 4rem; /* Kích thước chữ lớn */
            font-weight: bold; /* Chữ đậm */
            margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Đổ bóng cho chữ */
        }

        img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Oops! Page not found</h1>
    <img src="https://s3-cdn.cmlabs.co/page/2023/01/24/a-guideline-on-how-to-fix-error-404-not-found-effectively-519451.png" alt="404 Not Found" />
</body>
</html>
