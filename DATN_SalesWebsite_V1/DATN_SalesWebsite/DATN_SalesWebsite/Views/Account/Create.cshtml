@model UserModel
@{
    ViewData["Title"] = "Register";
}
<div class="register-container d-flex justify-content-center align-items-center">
    <div class="register-form p-4 shadow rounded bg-white">
        <h2 class="text-center mb-4">Register</h2>
        <form asp-action="Create" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="mb-3">
                <label for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<!-- CSS nội tuyến -->
<style>
    .register-container {
        background-color: #f7f7f7;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom:20px;
    }

    .register-form {
        width: 100%;
        max-width: 400px;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 0.375rem;
        padding: 0.75rem;
        font-size: 1rem;
    }

    .form-label {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .btn {
        font-size: 1rem;
        padding: 0.75rem;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #007bff;
            color: white;
        }
</style>

@section Scripts
        {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}